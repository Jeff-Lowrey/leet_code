{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "plugins": ["security"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "off",
    "no-undef": "off",
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-case-declarations": "error",
    "prefer-const": "warn",
    "no-var": "error",
    "eqeqeq": ["error", "always"],
    "curly": "off",
    "security/detect-eval-with-expression": "error",
    "security/detect-unsafe-regex": "error"
  },
  "globals": {
    "hljs": "readonly",
    "Prism": "readonly"
  }
}
